<resources>
    <!-- Large Text Style -->
    <style name="LargeTextAppearance.Bold">
        <item name="android:textSize">24sp</item>
        <item name="android:lineHeight">28sp</item>
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="LargeTextAppearance.Bold.White">
        <item name="android:textSize">24sp</item>
        <item name="android:lineHeight">28sp</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="LargeTextAppearance">
        <item name="android:textSize">24sp</item>
        <item name="android:lineHeight">28sp</item>
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <!-- Medium Text Style -->

    <style name="MediumTextAppearance.Bold">
        <item name="android:textSize">18sp</item>
        <item name="android:lineHeight">22sp</item>
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="MediumTextAppearance.Gray">
        <item name="android:textSize">18sp</item>
        <item name="android:lineHeight">22sp</item>
        <item name="android:textColor">?colorOnSurface</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="MediumTextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:lineHeight">22sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">?colorOnPrimary</item>
    </style>

    <style name="MediumTextAppearance.Bold.White">
        <item name="android:textSize">18sp</item>
        <item name="android:lineHeight">22sp</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <!-- Small Text Style -->
    <style name="SmallTextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:lineHeight">20sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">?colorOnPrimary</item>
    </style>

    <style name="SmallTextAppearance.Gray">
        <item name="android:textSize">16sp</item>
        <item name="android:lineHeight">20sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">?colorOnSurface</item>
    </style>

    <style name="XSmallTextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:lineHeight">18sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="XSmallTextAppearance.Gray">
        <item name="android:textSize">14sp</item>
        <item name="android:lineHeight">18sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">?colorOnSurface</item>
    </style>


    <style name="CustomSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textColor">@color/OnPrimaryColor</item>
        <item name="android:textColorHint">@color/OnSurfaceColor</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CircleImageViewShape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="android:background">?colorPrimary</item>
        <item name="tabIndicatorColor">?colorSecondary</item>
        <item name="tabSelectedTextColor">?colorSecondary</item>
        <item name="tabTextColor">?colorOnSurface</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="android:textAppearance">@style/MediumTextAppearance.Gray</item>
    </style>
</resources>
